    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Instagram"
        android:textSize="40sp"
        android:paddingLeft="90sp"
        android:textColor="@color/black"
        android:paddingBottom="17dp"


        android:textStyle="bold"

        android:layout_marginTop="60dp"


        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up for to see photos and videos    \n                from your friends."
        android:textSize="17sp"
        android:paddingLeft="40sp"
        android:textColor="#696969"
        android:layout_marginBottom="30dp"
        android:textStyle="bold"
        />

    <Button
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#0D52BD"
        android:text="Log in with Facebook"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="______________                      ______________"
        android:textSize="15sp"
        android:paddingLeft="40sp"
        android:textColor="#808080"
        android:layout_marginBottom="-15dp"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" OR"
        android:textSize="15sp"
        android:paddingLeft="160sp"
        android:textColor="#808080"
        android:layout_marginBottom="30dp"
        android:textStyle="bold"
        />





    <EditText
        android:id="@+id/mail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Mobile Number or Email"
        android:textColor="#731515"
        android:inputType="text"
        android:background="@drawable/edittext_background"
        android:padding="12dp" />



    <EditText
        android:id="@+id/mai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Full Name"
        android:textColor="#731515"
        android:inputType="text"
        android:background="@drawable/edittext_background"
        android:padding="12dp" />

    <EditText
        android:id="@+id/maile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Username"
        android:textColor="#731515"
        android:inputType="text"
        android:background="@drawable/edittext_background"
        android:padding="12dp" />

    <EditText
        android:id="@+id/maie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Password"
        android:textColor="#731515"
        android:inputType="text"
        android:background="@drawable/edittext_background"
        android:padding="12dp" />



    <RadioGroup
        android:id="@+id/rgroup"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <!--    <RadioButton-->
        <!--        android:layout_width="wrap_content"-->
        <!--        android:layout_height="wrap_content"-->

        <!--        android:id="@+id/group"-->
        <!--        android:text="male"-->

        <!--        >-->
        <!--    </RadioButton>-->

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="true"
            android:text="I Accept Term and Conditions...">

        </CheckBox>

        <Button
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#0D52BD"
            android:text="Sign Up"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/white" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="           By signing up, you agree to our"
            android:textSize="15sp"
            android:paddingLeft="40sp"
            android:textColor="#696969"
            android:layout_marginBottom="-1dp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="      Term, Data Policy and Cookies \n                          Policy "
            android:textSize="17sp"
            android:paddingLeft="40sp"
            android:textColor="#696969"
            android:layout_marginBottom="30dp"
            android:textStyle="bold"
            />






    </RadioGroup>

</LinearLayout>

